# Ignore the Composer-generated directories and files
/vendor/
/composer.lock
/composer.phar

# Ignore the core and contrib modules, themes, and profiles (installed by Composer)
web/core/
web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/

# Ignore compiled/compiled files in the sites directory
/web/sites/*/files/*
/web/sites/*/private/*
/web/sites/*/temp/*

# Ignore Drupal-specific directories for local configuration and caches
/web/sites/*/settings.php
/web/sites/*/default/settings.php
/web/sites/*/default/services.yml
/web/sites/*/default/ssl/
web/sites/*/settings.local.php
web/sites/*/settings.local.yml
web/sites/*/settings.local.php

# Ignore the Drupal config directory (if using configuration management)
web/sites/*/config/

# Ignore the Drupal theme and module build files (if you are using a build system)
web/themes/custom/*/.sass-cache
web/themes/custom/*/node_modules

# Ignore all the IDE-specific files
.idea/
.vscode/
*.sublime-workspace
*.sublime-project

# Ignore backup files
*~
*.bak
*.swp
*.swm

# Ignore MacOS .DS_Store files
.DS_Store

# Ignore Windows Thumbs.db
Thumbs.db

# Ignore local setup files
.lando.yml
*.sql